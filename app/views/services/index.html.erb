<div class="page-header clearfix">
			<h1 class="page-title">Listing services</h1>
</div>

<table width="100%" style="text-align:center">
  <tr>
    <th width="20%">Company</th>
    <th width="20%">Name</th>
    <th width="20%"></th>
    <th width="20%"></th>
    <th width="20%"></th>
  </tr>

<% @services.each do |service| 
 company = Company.find(service.company_id)	
	
	%>

  <tr>
    <td><%= company.name %></td>
    <td><%= service.name %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h4><%= link_to 'New Service', new_service_path %></h4>
